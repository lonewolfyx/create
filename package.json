{
  "name": "@lonewolfyx/create",
  "type": "module",
  "version": "0.0.8",
  "packageManager": "pnpm@10.15.1",
  "description": "Command-line for creating projects from templates.",
  "author": "lonewolfyx <olddrivero.king@qq.com>",
  "license": "MIT",
  "homepage": "https://github.com/lonewolfyx/create#readme",
  "repository": {
