  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "cac": "^6.7.14",
    "defu": "^6.1.4",
    "find-up": "^8.0.0",
    "giget": "^2.0.0",
    "glob": "^13.0.0",
    "jiti": "^2.6.1",
    "replace-in-file": "^8.4.0",
    "tinyexec": "^1.0.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.7.3",
    "@lonewolfyx/tsconfig": "^0.0.6",
    "@types/node": "^25.0.3",
    "eslint": "^9.39.2",
    "lint-staged": "^16.2.7",
    "picocolors": "^1.1.1",
    "simple-git-hooks": "^2.13.1",
    "tsdown": "^0.20.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "node scripts/verify-commit.js"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
